<div class="form-container">
  <h1>Add movie to <%= @list.name %></h1>
  <%= simple_form_for @bookmark do |f|%>
    <%= f.association :movie %>
    <%= f.input :comment %>
    <div class="d-flex justify-content-between">
      <%= f.submit 'Add movie', class: 'btn btn-warning' %>
      <%= link_to 'Cancel', list_path(@list), class: 'btn btn-danger'  %>
    </div>
  <% end %>
</div>
